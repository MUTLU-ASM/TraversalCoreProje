@model List<DTOLayer.DTOs.AnnouncementDTOs.AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Listesi</h1>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.AnnouncementId</td>
            <td>@x.Title</td>
            <td>@x.Content</td>
            <td><a href="/Admin/Announcement/DeleteAnnouncement/@x.AnnouncementId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Announcement/UpdateAnnouncement/@x.AnnouncementId" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Admin/Announcement/UpdateAnnouncement/" class="btn btn-outline-dark">Detay</a></td>
        </tr>
    }
</table>
<a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-outline-info">Yeni Duyuru Girişi</a>