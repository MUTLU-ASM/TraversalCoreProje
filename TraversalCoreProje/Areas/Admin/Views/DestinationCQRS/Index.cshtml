@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>CQRS Tur Rotası Verileri</h2>

<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Gün Gece</th>
        <th>Kapasite</th>
        <th>Fiyat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@x.city</td>
            <td>@x.daynight</td>
            <td>@x.capacity</td>
            <td>@x.price</td>
            <td><a href="/Admin/ContactUs/DeleteMessage/@x.id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Comment/LookMessage/@x.id" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="#" class="btn btn-outline-dark">Yeni Tur Rotası Girişi</a>